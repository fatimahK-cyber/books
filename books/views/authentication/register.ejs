<% include ../partials/header %>


<main class="container">
    <%  if(message.length > 0) { %>
        <div class="alert alert-danger mt-3"><%= message %>
        
        </div>
    <% } %>

    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Please Register</h2>
            <form autocomplete="off" method="POST" action="/register">

                <fieldset class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="username" name="username" 
                    placeholder="Enter your username" required autofocus>
                </fieldset>

                <fieldset class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" 
                    placeholder="Enter your password" required autofocus>

                    
                </fieldset>

                <fieldset class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" 
                    placeholder="Enter your email" required autofocus>
                </fieldset>

                <fieldset class="form-group">
                    <label for="displayName">Display Name</label>
                    <input type="text" class="form-control" id="displayName" name="displayName" 
                    placeholder="Enter your display name" required autofocus>
                    <br>
                </fieldset>



                 <fieldset class="form-group text-center">
                    <input type="submit" class="btn btn-primary btn-block" value="Register">
                    <a href="/"></a>

                    <input type="button" class="btn btn-warning" value="Cancel">
                    <a href="/"></a>
                </fieldset>
            </form>

</main>

<% include ../partials/footer %>